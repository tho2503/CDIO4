@model Model.EF.DanhMuc
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Admin/Index">Trang chính</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Admin/Category/Index">Danh Mục</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <a>Cập nhật</a>
        </li>
    </ol>
</div>
<div class="container mt-5">
    <h2 class="alert alert-dark text-center mb-4">Cập nhật danh mục</h2>
    @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form class="py-4">
            <div class="form-group row justify-content-center">
                <label for="ID" class="col-2 col-form-label">ID</label>
                <div class="col-3">
                    @Html.TextBoxFor(Model => Model.ID, new { @type = "text", @class = "form-control", @id = "ID", @placeholder = "UserName", @readonly ="true" })
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <label for="TenDM" class="col-2 col-form-label">Tên danh mục</label>
                <div class="col-3">
                    @Html.TextBoxFor(Model => Model.TenDanhMuc, new { @type = "text", @class = "form-control", @id = "TenDM", @placeholder = "Password", @required = "true" })
                </div>
            </div>           
            @Html.ValidationSummary(true, "", new { @class = "Text-danger" })
            <div class="form-group row pt-2 justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg" id="dangky">Xác nhận</button>
            </div>

        </form>
    }
</div>

