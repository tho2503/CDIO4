@model Model.EF.DanhMuc
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Admin/Index">Trang chính</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Admin/Category/Index">Danh mục</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <a>Thêm mới</a>
        </li>
    </ol>
</div>
<div class="container mt-5">
    <h2 class="alert alert-dark text-center mb-4">Thêm danh mục</h2>
    @using (Html.BeginForm("Create", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form class="py-4">            
            <div class="form-group row justify-content-center">
                <label for="TenDM" class="col-2 col-form-label">Tên danh mục</label>
                <div class="col-3">
                    @Html.TextBoxFor(Model => Model.TenDanhMuc, new { @type = "text", @class = "form-control", @id = "TenDM", @placeholder = "Tên danh mục", @required = "true" })
                </div>
            </div>            
            @Html.ValidationSummary(true, "", new { @class = "Text-danger" })
            <div class="form-group row pt-2 justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg" id="dangky">Thêm mới</button>
            </div>
        </form>
    }
</div>

