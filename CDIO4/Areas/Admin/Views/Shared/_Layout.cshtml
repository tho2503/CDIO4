

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">   
    <title>Admin_Website</title>
    <!-- Custom fonts for this template-->
    <link href="~/Assets/Home/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link rel="stylesheet" type="text/css" href="~/Assets/Bs 4/css/bootstrap.css" />
    <!-- Custom styles for this template-->
    <link href="~/Assets/Home/css/sb-admin.css" rel="stylesheet">    
</head>
<body id="page-top">
    @{
        var session = (CDIO4.Common.UserLogin)Session[CDIO4.Common.CommonStants.USER_SESSION];
    }
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1 " href="index.html">Admin_Website</a>
        <button class="btn btn-link btn-sm text-white order-1 order-sm-0 mr-auto" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Navbar -->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @if (session != null)
                    {
                        @session.TenDangNhap;
                    }
                    <i class="fas fa-user-circle fa-fw"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">Đăng xuất</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Admin/Index">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Trang chính</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-gavel"></i>
                    <span>Phiên đấu giá</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <h6 class="dropdown-header">Về sản phẩm:</h6>
                    <a class="dropdown-item" href="/Admin/Product/Index">Danh sách</a>
                    <a class="dropdown-item" href="/Admin/Product/AddItem">Đăng sản phẩm</a>
                    <div class="dropdown-divider"></div>
                    <h6 class="dropdown-header">Về Phiên đấu giá:</h6>
                    <a class="dropdown-item" href="/Admin/Bidd/Index">Danh sách</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Order/Index">
                    <i class="fas fa-fw fa-money-bill"></i>
                    <span>Hóa đơn</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="AccountDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Tài khoản</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="AccountDropdown">
                    <a class="dropdown-item" href="/Admin/Account/Index">Danh sách</a>
                    <a class="dropdown-item" href="/Admin/Account/Create">Thêm mới</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Category/Index">
                    <i class="fas fa-fw fa-money-bill"></i>
                    <span>Danh mục</span>
                </a>
            </li>
        </ul>
        <div id="content-wrapper">
            @RenderBody()

            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2019</span>
                    </div>
                </div>
            </footer>
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <a href="/Home/Index" id="home" style="display:none;">Home</a>

    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="color:black;">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Bạn muốn đăng xuất không?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="button" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary" type="button">@Html.ActionLink("Đăng xuất", "Logout", "Admin", new { @class = "text-white", @style = "text-decoration:none;" })</button>

                </div>
            </div>
        </div>
    </div>
    <!-- Logout Modal-->
    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/Home/vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="~/Assets/Home/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Assets/Home/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Assets/Home/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Assets/Admin/Plugins/ckfinder/ckfinder.js"></script>
    <!-- Page level plugin JavaScript-->
    <script src="~/Assets/Home/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Assets/Home/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Assets/Home/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Assets/Home/js/sb-admin.min.js"></script>
    <!-- Demo scripts for this page-->

    <script type="text/javascript">
        @if(session == null)
        {
            <text>
        $(document).ready(function () {
            var c = document.getElementById("home");
            c.click();
        });
            </text>
        }
    </script>
    @RenderSection("jsChart", required: false)
    @RenderSection("jsFooter", required: false)

</body>
</html>

